<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Start"
        android:onClick="onclick_button_start" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Stop"
        android:onClick="onclick_button_stop"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="forward"
        android:onClick="onclick_button_forward" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Bbackward"
        android:onClick="onclick_button_backward"/>

    <cc.brainbook.viewpager.viewpagerbanner.ViewPagerBanner
        android:id="@+id/viewpagerbanner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/holo_blue_bright"/>

</LinearLayout>
